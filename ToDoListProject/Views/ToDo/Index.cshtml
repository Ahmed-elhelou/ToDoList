@model IEnumerable<ToDoListProject.Models.ToDoModel>

@{
    ViewData["Title"] = "Index";
    string color = "";
    string status="";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)@("("+Model.Count()+")")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhatToDo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenToDo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFinished)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            @if (item.IsLate())
                color = "red";
            else color = "#212529";
            <tr style="color:@color">
                <td >
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhatToDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenToDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFinished)               
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id }) |
                @Html.ActionLink("Details", "Details", new {id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id }) |
                    @if (!item.IsFinished)
                        @Html.ActionLink("Finish", "Finish", new { id = item.Id })
                    
                    
                    

            </td>
        </tr>
}
    </tbody>
</table>
